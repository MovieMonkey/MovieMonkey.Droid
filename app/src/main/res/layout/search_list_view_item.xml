<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBackGroundListItem"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:translationZ="5dp">

        <ImageView
            android:id="@+id/search_list_view_row_image"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:layout_toStartOf="@+id/search_list_row_year"
            android:layout_toEndOf="@+id/search_list_view_row_image">

            <TextView
                android:id="@+id/search_list_row_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Batman: The Dark Knight"
                android:textColor="@color/colorTitleText" />

            <TextView
                android:id="@+id/search_list_row_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Action, Adventure, Fanatsy"
                android:layout_below="@+id/search_list_row_title"/>
        </LinearLayout>

        <TextView
            android:id="@+id/search_list_row_year"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:gravity="center_vertical|right"

            android:ellipsize="end"
            android:maxLines="1"
            android:text="2013"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorTitleText" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>
