<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorDarkGrey</item>
    </style>

    <!-- Title Style -->
    <style name="CustomStyleTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTitleText</item>/>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10dp</item>/>
        <item name="android:layout_marginBottom">10dp</item>/>
    </style>

    <style name="CustomStyleSmallTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGenreText</item>/>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomStyleInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>/>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>






</resources>
